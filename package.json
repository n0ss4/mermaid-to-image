{
  "name": "mermaid-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && bun run dev",
    "dev:api": "cd apps/api && bun run dev",
    "dev": "bun run dev:web & bun run dev:api",
    "build:web": "cd apps/web && bun run build",
    "build:api": "cd apps/api && bun run build",
    "build:core": "cd packages/core && bun run build",
    "build": "bun run build:core && bun run build:web && bun run build:api",
    "test:web": "cd apps/web && bun run test",
    "test:api": "cd apps/api && bun run test",
    "test:core": "cd packages/core && bun run test",
    "test": "bun run test:core && bun run test:web && bun run test:api",
    "typecheck:web": "cd apps/web && bunx tsc -p tsconfig.json --noEmit",
    "typecheck:api": "cd apps/api && bunx tsc -p tsconfig.json --noEmit",
    "typecheck:core": "cd packages/core && bunx tsc -p tsconfig.json --noEmit",
    "typecheck": "bun run typecheck:core && bun run typecheck:web && bun run typecheck:api"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  }
}
